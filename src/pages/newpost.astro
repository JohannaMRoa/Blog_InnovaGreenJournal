---
import Layout from "../layouts/Layout.astro";

export const prerender = false;

const accessToken = Astro.cookies.get("sb-access-token")?.value;
const refreshToken = Astro.cookies.get("sb-refresh-token")?.value;

if (!accessToken || !refreshToken) {
  return Astro.redirect("/signin");
}

---

<Layout title="Create post">

  <main class="max-w-2xl mx-auto mt-16 pb-32">
    
    <h1 class="text-2xl font-semibold mb-6"> Create a new post</h1>

    <form action="/api/auth/posts/create" method="post">

      <div>
        <label class="block text-sm mb-1">Title</label>
        <input name="title" required class="w-full border px-3 py-2 rounded"/>
      </div>

      <div>
        <label class="block text-sm mb-1">Content</label>
        <textarea name="content" rows="6" required class="w-full border px-3 py-2 rounded" ></textarea>
      </div>

      <button type="submit" class="bg-green-700 text-white px-4 py-2 rounded hover:bg-green-800"> Publish </button>

    </form>
  </main>
</Layout>
